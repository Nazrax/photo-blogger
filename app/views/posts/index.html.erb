<h1>Listing posts</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Picture</th>
    <th>Created at</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%=h post.text %></td>
    <td><%=h post.picture_id %></td>
    <td><%=h post.created_at %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
